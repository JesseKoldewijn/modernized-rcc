---
import GlobalLayout from "../layouts/globalLayout.astro";
import ListItem from "@/components/react-rcc/list-item";

const demoMessage = {
  title: "Hello World",
  body: "This is a demo message",
  tikked: 0,
};

const demoMessages = Array.from({ length: 20 }, () => demoMessage);
---

<GlobalLayout title="Home">
  <div
    class="flex h-full min-h-screen flex-col items-center justify-center gap-4 overflow-y-auto px-4 py-8"
  >
    <h1 class="text-2xl font-bold lg:text-4xl">Modernized RCC</h1>
    <div class="mx-auto flex w-full flex-col items-start justify-center gap-4">
      <section
        class="mx-auto flex w-full max-w-md flex-col gap-3 text-center"
        data-elementID-RCC-Parent
      >
        <h2 class="font-semibold">React Class Components</h2>
        <div class="mt-3 flex flex-col gap-6">
          {
            demoMessages.flatMap((item) => (
              <ListItem
                message={item}
                tikInterval={1250}
                maxTikkedMs={10000}
                keepTikking={true}
                client:visible
              />
            ))
          }
        </div>
      </section>
    </div>
  </div>
</GlobalLayout>
